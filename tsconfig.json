{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "dom"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "target": "ES2020",
    "noEmitOnError": true,
    "downlevelIteration": true,
    "incremental": true,
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["./dist", "node_modules"]
}
